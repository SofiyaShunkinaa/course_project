{% extends 'base.html.twig' %}

{% block title %}{{'Registration'|trans}}{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>{{'Registration'|trans}}</h1>    
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control', 'id': 'inputEmail', 'autocomplete': 'email', 'required': true, 'autofocus': true} }) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Password'|trans, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'id': 'inputPassword', 'autocomplete': 'current-password', 'required': true } }) }}
            </div>
            <div class="form-check checkbox mb-3">
                {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input' } }) }}
                {{ form_label(registrationForm.agreeTerms, 'Agree to terms and conditions'|trans, { 'label_attr': { 'class': 'form-check-label' } }) }}
            </div>
            <button type="submit" class="btn btn-primary">{{'Register'|trans}}</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
