<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="stylesheet" href="{{ asset('css/variables.css') }}">
        {% endblock %}

        {% block javascripts %}
        <script type="application/javascript" src="{{ asset('js/collection-form-helper.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="container">
                <nav>
                    <div class="nav-home">
                    <span><a href="{{ path('app_main') }}">HOME</a></span>
                    </div>
                    <div class="nav-search">
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                    <div class="nav-buttons">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <button><a href="{{ path('app_dashboard') }}">Dashboard</a></button>
                            <span>Welcome, {{ app.user.email}}</span>
                            <button><a href="{{ path('app_logout') }}">Logout</a></button>
                        {% else %}
                            <button class="btn"><a href="{{ path('app_login') }}">Login</a></button>
                            <button class="btn"><a href="{{ path('app_register') }}">Register</a></button>
                        {% endif %}
                    </div>
                </nav>
            </div>
        </header>
        <div class="flash-messages">
            {% for message in app.flashes('success') %}
                <div class="alert-success">{{ message }}</div>
            {% endfor %}
        </div>

        <div class="container app-content">
            {% block body %}{% endblock %}
        </div>

        <footer>
        <div class="container">
            <div class="btn-group dropup" role="group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Theme
                </button>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Dropdown link</a></li>
                <li><a class="dropdown-item" href="#">Dropdown link</a></li>
                </ul>
            </div>

            <div class="btn-group dropup" role="group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Lang
                </button>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Dropdown link</a></li>
                <li><a class="dropdown-item" href="#">Dropdown link</a></li>
                </ul>
            </div>
        </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
